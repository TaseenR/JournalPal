generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String         @id @default(uuid())
  email     String         @unique
  clerkId   String         @unique
  updatedAt DateTime       @updatedAt
  createdAt DateTime       @default(now())
  entries   JourneyEntry[]
}

model JourneyEntry {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId   String
  user     User      @relation(fields: [userId], references: [id])
  content  String    @db.Text
  analysis Analysis?

  @@index([userId])
}

model Analysis {
  id        String       @id @default(uuid())
  updatedAt DateTime     @updatedAt
  createdAt DateTime     @default(now())
  mood      String
  summary   String       @db.Text
  colour    String
  negative  Boolean
  entryId   String
  entry     JourneyEntry @relation(fields: [entryId], references: [id])

  @@unique([entryId])
}
