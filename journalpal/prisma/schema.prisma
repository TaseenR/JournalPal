generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String         @id @default(uuid())
  email     String         @unique
  createdAt DateTime       @default(now())
  clerkId   String         @unique
  updatedAt DateTime       @updatedAt
  entries   JourneyEntry[]
}

model JourneyEntry {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  content   String    @db.Text
  user      User      @relation(fields: [userId], references: [id])
  analysis  Analysis?

  @@unique([userId, id])
}

model Analysis {
  id        String       @id @default(uuid())
  updatedAt DateTime     @updatedAt
  createdAt DateTime     @default(now())
  mood      String
  summary   String
  colour    String
  negative  Boolean
  entryId   String       @unique
  entry     JourneyEntry @relation(fields: [entryId], references: [id])
}
